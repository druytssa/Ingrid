{
  "manifest_version": 3,
  "name": "Ingrid TTS",
  "version": "1.0",
  "description": "Text-to-speech for ChatGPT responses",
  "permissions": [
    "scripting",
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "play-pause": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      },
      "description": "Toggle play/pause"
    },
    "replay-10s": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left"
      },
      "description": "Replay 10 seconds"
    },
    "skip-10s": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right"
      },
      "description": "Skip 10 seconds"
    }
  }
}
