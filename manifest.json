{
  "manifest_version": 3,
  "name": "Custom TTS Reader",
  "version": "1.1",
  "description": "Reads ChatGPT responses aloud with OpenAI TTS, with chapter controls, highlighting, and dyslexia-friendly options.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "play-pause": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      },
      "description": "Play or pause current chapter"
    },
    "replay-10s": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left"
      },
      "description": "Replay last 10 seconds"
    },
    "skip-10s": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right"
      },
      "description": "Skip forward 10 seconds"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
